{
  "name": "api_service",
  "version": "1.0.0",
  "description": "Servicio principal de la API que consume autenticaci√≥n y gestiona datos del sistema",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:unit": "jest tests/unit --coverage",
    "test:coverage:integration": "jest tests/integration --coverage --runInBand --forceExit",
    "test:coverage:report": "jest --coverage --coverageReporters=text-summary,lcov,html"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^8.3.4",
    "pg": "^8.11.3",
    "redis": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "text-summary"
    ],
    "testTimeout": 10000
  }
}
